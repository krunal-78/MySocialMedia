<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysocialmedia">

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:icon="@drawable/ic_launcher_post"
        android:roundIcon="@drawable/ic_launcher_post">
        <activity android:name=".activities.comment_box"
            android:label="Comment Box"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.MySocialMedia"></activity>
        <activity
            android:name=".activities.CreatePostActivity"
            android:label="Create Post"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.MySocialMedia"></activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="My Social Media"
            android:theme="@style/Theme.MySocialMedia" />
        <activity
            android:name=".activities.SignInActivity"
            android:label="My Social Media"
            android:theme="@style/Theme.MySocialMedia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>