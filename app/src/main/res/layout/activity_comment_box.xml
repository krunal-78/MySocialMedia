<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.comment_box">

    <TextView
        android:layout_width="0dp"
        android:id="@+id/comment_title"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:text="@string/comment_box"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:background="@drawable/background_shape"
        android:backgroundTint="@color/signInActivityBackground"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRecyclerView"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_title"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />
    <EditText
        android:id="@+id/inputComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:hint="@string/comment"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@drawable/background_shape"
        android:backgroundTint="@color/signInActivityBackground"
        />
    <ImageView
        android:id="@+id/sendComment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/inputComment"
        android:src="@drawable/ic_send_comment"
        android:layout_marginBottom="27dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>